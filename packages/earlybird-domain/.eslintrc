{
  "extends": [
    "eslint-config-airbnb"
  ],
  "parser": "babel-eslint",
  "env": {
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "semi": ["error", "never"],
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "no-use-before-define": ["error", {
      "functions": false,
      "classes": true
    }],
    "no-restricted-syntax": [
      "error",
      "ForInStatement"
    ]
  }
}